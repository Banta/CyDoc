<tr id="booking_<%= @booking.id %>">
  <td><%= in_place_editor_field :booking, :value_date %></td>
  <td>
    <%= in_place_editor_field :booking, :title %>
    <%= '<hr style="height: 1px; margin: 0"/>' unless (@booking.comments.blank?) %>
    <i><%= in_place_editor_field :booking, :comments %></i>
  </td>
  <td><%= link_to @booking.reference.to_s, @booking.reference unless @booking.reference.nil? rescue 'Referenz' %></td>
  <td style="text-align: right"><%= (@booking.credit_account == @account) ? "#{in_place_editor_field(:booking, :amount_as_string)}" : "<i>#{link_to(h(@booking.credit_account.code), account_path(@booking.credit_account), :title => h(@booking.credit_account.title))}</i>" %></td>
  <td style="text-align: right"><%= (@booking.debit_account == @account) ? "#{in_place_editor_field(:booking, :amount_as_string)}" : "<i>#{link_to(h(@booking.debit_account.code), account_path(@booking.debit_account), :title => h(@booking.debit_account.title))}</i>" %></td>
  <td style="text-align: right"><%= currency_fmt(@total_credit - @total_debit) %></td>
  <td style="border: none 0px">
    <%= link_to_remote image_tag('delete.png'), {:url => booking_path(@booking), :method => :delete, :confirm => "Buchung #{@booking.to_s} lÃ¶schen?"} %>
  </td>
</tr>
