<table class="list booking_list">
  <%= render :partial => 'booking_list_header' %>

  <% @total_debit = 0; @total_credit = 0 %>
  <% for @booking in @bookings %>
    <% @total_debit += @booking.amount if @booking.debit_account == @account %>
    <% @total_credit += @booking.amount if @booking.credit_account == @account %>
    <%= render :partial => 'booking_item' %>
  <% end %>
  <tr style="border-top: double 2px black; background-color: grey">
    <td colspan="2">Umsatz</td>
    <td/>
    <td style="text-align: right"><%= currency_fmt(@total_credit) %></td>
    <td style="text-align: right"><%= currency_fmt(@total_debit) %></td>
    <td />
    <td />
  </tr>
  <tr style="border-top: double 2px black; background-color: grey">
    <td colspan="2">Aktueller Kontostand (per <%= DateTime.now.strftime("%d.%m.%Y %H:%M") %>)</td>
    <td/>
    <td/>
    <td/>
    <td style="text-align: right"><%= currency_fmt(@total_credit - @total_debit) %></td>
    <td/>
  </tr>
</table>
