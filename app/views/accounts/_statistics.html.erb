<table class="list">
  <tr>
    <th style="width: 40%">Titel</th>
    <th style="text-align: right; width: 20%">Anzahl</th>
    <th style="text-align: right; width: 20%">Durchschnitt</th>
    <th style="text-align: right; witdh: 20%">Summe</th>
  </tr>
  <% for record in @account.bookings.statistics -%>
  <tr>
    <td><%= record["title"] %></td>
    <td style="text-align: right"><%= record["count"] %></td>
    <td style="text-align: right"><%= currency_fmt record["avg"] %></td>
    <td style="text-align: right"><%= currency_fmt record["sum"] %></td>
  </tr>
  <% end -%>  
</table>
