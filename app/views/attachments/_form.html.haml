- semantic_form_for parent? ? [parent, resource] : resource, :html => {:multipart => true} do |f|
  = f.semantic_errors

  - f.inputs do
    = f.input :title
    = f.input :file, :as => :file
    = f.input :code, :as => :select, :collection => attachment_code_collection
    - if parent?
      - if parent
        - f.object.object = parent
        = f.input :object_id, :as => :hidden
        = f.input :object_type, :as => :hidden
      - else
        = f.input :object, :collection => parent_class.all

  - f.buttons do
    = f.commit_button
