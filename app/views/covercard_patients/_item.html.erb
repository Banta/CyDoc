<tr style="cursor: pointer" onclick="window.location='<%= patient_path(item) %>'">
  <td><b><%= item.full_name %></b></td>
  <td><%= address(item.vcard, ', ') %></td>
  <td style="text-align: right"><%= item.doctor_patient_nr %></td>
  <td style="text-align: right"><%= item.birth_date %></td>
  <td><%= link_to t_action(:trim_patient), covercard_update_path(item, @covercard_patient.covercard_code) if Covercard::Patient.settings['modules.covercard'] %></td>
</tr>
