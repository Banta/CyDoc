<div id="covercard_patient">
  <h2><%= t('cydoc.covercard_search.result') %></h2>
  <div class="left-box">
    <% [:name, :birth_date, :sex].each do |attr| %>
      <p>
        <label><%= t_attr(attr, Patient) %></label>
        <%= @covercard_patient.send(attr) %>
      </p>
    <% end %>
  </div>
  <div class="right-box">
    <% [:vcard, :billing_vcard].each do |vcard| %>
      <% address = @covercard_patient.send(vcard) %>
      <div class="address-box">
        <label><%= t_attr(vcard, Patient) %></label>
        <p class="address">
          <% if address.extended_address %>
            <%= address.extended_address %>
            <br/>
          <% end %>
          <%= address.street_address %>
          <br/>
          <%= address.postal_code %> <%= address.locality %>
        </p>
      </div>
    <% end %>
  </div>
</div>
