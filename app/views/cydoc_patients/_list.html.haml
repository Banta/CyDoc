#search_result
  %table.table
    = render :partial => 'list_header'
    - if @patients
      = render :partial => 'item', :collection => @patients
      = render :partial => 'list_footer'
    - if @suggest_covercard_search
      %td/
      %tr= link_to t('cydoc.actions.covercard_search'), covercard_search_path(@suggest_covercard_search), 'data-remote' => true if Covercard::Patient.settings['modules.covercard']
