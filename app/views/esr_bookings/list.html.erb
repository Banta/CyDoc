<div class="contextual">
  <%= link_to "VESR verbuchen", esr_bookings_path, :method => :post, :class => "icon icon-book" %>
</div>
<h2>VESR Buchungsläufe</h2>
<div id="vesr_list">
</div>

<% content_for :sidebar do %>
  <h3>Ältere Buchungsläufe</h3>
  <ul>
    <% for esr_file in EsrFile.find :all, :limit => 10, :order => 'updated_at DESC' %>
      <li><%= link_to esr_file.to_s(:short), esr_booking(esr_file) %></li>
    <% end %>
  </ul>
<% end %>
