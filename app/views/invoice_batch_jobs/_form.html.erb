<div id="invoice_batch_form">
  <h3>Rechnungslauf</h3>
  <div class="box">
    <%= semantic_form_for @invoice_batch_job, :before => "showPrintingFlash('Rechnungslauf'); $('invoice_batch_form').remove()", :remote => true do |form| %>
      <%= form.inputs do %>
        <%= form.input :value_date, :as => :date_field, :input_html => {:size => 12, :autocomplete => 'off', 'date-picker' => true, 'data-autofocus' => true} %>
        <%= form.input :count, :input_html => {:size => 12, :autocomplete => 'off'} %>
        <%= form.input :tiers_name, :as => :hidden %>
      <% end %>

      <%= form.buttons do %>
        <%= form.submit "Drucken", :class => "icon icon-print" %>
        <%= button_to_function "Abbrechen", "$('invoice_batch_form').remove()", :class => "icon icon-cancel" %>
      <% end %>
    <% end %>
  </div>
</div>
