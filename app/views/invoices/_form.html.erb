<div id="invoice_form">
  <h3>Neue Rechnung</h3>
  <%= error_messages_for :invoice %>

  <div class="box">
    <% remote_form_for [:patient, :treatment, @invoice], :builder => Rubaidh::TabularForm::TabularFormBuilder do |invoice| %>
      <table>
        <%= invoice.text_field :value_date, :label => 'Rechnungsdatum', :size => 12 %>
        <tr>
          <td><label for="tiers[name]">Verg√ºtungsart:</label></td>
          <td><%= select 'tiers', :name, [['Tiers Garant', TiersGarant], ['Tiers Payant', TiersPayant]] %></td>
        </tr>
        <%= invoice.text_area :remark, :rows => 2, :label =>  'Bemerkungen' %>
        <%= invoice.submit "Erstellen" %>
      </table>
    <% end %>
  </div>
</div>
