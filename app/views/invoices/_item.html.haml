%tr{:id => "invoice_#{item.id}"}
  %td= link_to (item.imported_invoice_id.blank? ? item.id : "#{item.id} (Triamun #{item.imported_invoice_id})"), item
  %td= link_to item.patient.full_name, item.patient
  %td= item.value_date
  %td= item.due_date
  %td{:style => "text-align: right"}= sprintf("%0.2f", item.amount)
  %td{:style => "text-align: right"}= sprintf("%0.2f", item.due_amount.currency_round)
  %td{:style => "text-align: right"}= t item.state, :scope => 'invoice.state'
  %td
    - if item.overdue?
      = link_to image_tag('print.png'), print_reminder_letter_invoice_path(item), :title => "Drucken", :method => :post
    - else
      = link_to image_tag('print.png'), print_invoice_path(item), :title => "Drucken", :method => :post
    = link_to image_tag('delete.png'), {:url => invoice_path(item, :context => 'list'), :method => :delete, :confirm => "Rechnung #{item.to_s} stornieren?"}, :title => 'Stornieren', :remote => true
    /
      <haml:loud> link_to &amp;quot;KK-Beleg&amp;quot;, insurance_recipe_invoice_path(item) </haml:loud>
      <haml:loud> link_to &amp;quot;KK-Beleg PDF&amp;quot;, insurance_recipe_invoice_path(item, :format =&amp;gt; :pdf) </haml:loud>
