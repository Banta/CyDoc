<div class="contextual">
  <%= link_to "VESR verbuchen", esr_bookings_path, :method => :post, :class => "icon icon-book" %>
</div>
<h2>Rechnungen</h2>

<script type="text/javascript">
  Event.observe(window, 'load', function() {$('search_query').focus()}, false);
</script>

<div id="search_form">
  <%= render :partial => 'search_form' %>
  <%= loading_indicator_tag :id => 'search' %>
</div>

<div id="search_results">
  <%= render :partial => 'list' %>
</div>

<h2>Überfällige Rechnungen</h2>
<% @invoices = Invoice.overdue.paginate(:page => params['page'], :per_page => 20, :order => 'id DESC') %>
<%= render :partial => 'list' %>

<h2>Patienten mit offenen Leistungen</h2>

<div class="contextual">
  <%= link_to "Alle drucken", print_all_invoices_path, :method => :post, :class => "icon icon-print" %>
</div>
<h2>Rechnungen zum Drucken</h2>
<% @invoices = Invoice.prepared.paginate(:page => params['page'], :per_page => 20, :order => 'id DESC') %>
<%= render :partial => 'list' %>
