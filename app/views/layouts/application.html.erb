<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML Basic 1.0//EN" "http://www.w3.org/TR/xhtml-basic/xhtml-basic10.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="Simon Huerlimann &lt;simon.huerlimann@cyt.ch&gt;" />
    <meta name="keywords" content="Praxis" />
    <meta name="description" content="CytDoc - Zytolabor Limmatplatz" />
    
    <%= stylesheet_link_tag 'noprobs' %>
    <%= stylesheet_link_tag 'cyto' %>
    <%= stylesheet_link_tag 'result_report' %>
    
    <%= javascript_include_tag :defaults %>

    <title>CytDoc - <%= controller.action_name %></title>
    <style>
      img {
        border: 0px
      }
    </style>
  </head>
  <body>
    <div id="MainWrapper">
        <div id="Header" style="background-color: #AEB9CF">
          <%= image_tag 'logo-left-small.png' %>
          <%= image_tag 'logo-right-small.png' %>
        </div>
        <div id="HeaderMenus">
          <ul>
            <li><%= link_to "Home", :controller => "/" %></li>
            <li><%= link_to "Patienten", :controller => 'patients' %></li>
            <li><%= link_to "Resultate", :controller => 'mailings' %></li>
            <li><%= link_to "Kontakt", "mailto:info@zyto-labor.com" %></li>
            <li><%= link_to "Material", 'http://shop.zyto-labor.com' %></li>
          </ul>
        </div>

<div id="MainContent">
<table style="height: 100%">
  <tr>
    <td style="width: 100%">
      <div id="result">
        <%= yield %>
      </div>
    </td>
    <td id="personal-information" style="min-width: 200px; vertical-align: top">
      <div id="SideContents">
        <div id="SideMenu">
          <%= render :partial => '/search/actions' %>
          <%= render :partial => '/patients/actions' if (@patient and @controller.is_a?(PatientsController))%>
          <%= render :partial => '/cases/actions' if @case %>
          <%= render :partial => '/invoices/actions' if @invoice %>
        </div>
        <% unless @related_cases.nil? %>
          <h3>Geschichte</h3>
          <%= render :partial => 'cases/compact', :collection => @related_cases %>
        <% end %>
      </div>
    </td>
  </tr>
</table>
    </div>
</div>
</body>
</html>
