<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML Basic 1.0//EN" "http://www.w3.org/TR/xhtml-basic/xhtml-basic10.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="Simon Huerlimann (ZytoLabor) &lt;simon.huerlimann@cyt.ch&gt;" />

    <link rel="shortcut icon" href="<%= image_path('favicon.ico') %>" />
    
    <%= stylesheet_link_tag 'formtastic', 'formtastic-cydoc', 'redmine', 'tabbing', 'cydoc', 'navigation', 'cyto', 'result_report', 'invoice', 'accounting', :media => 'all' %>
    
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag 'will_paginate' %>
    <%= javascript_include_tag 'tabbing' %>
    <%= javascript_include_tag 'printing' %>

    <title>CyDoc - <%= controller.action_name %></title>
  </head>
  <body>
    <div id="wrapper">
       <% cache :layout_header do %>
       <div id="header">
          <div style="float: left">
          </div>
          <div id="right-menu">
            <div><%= render :partial => 'users/user_bar' %></div>
            <div><%= render :partial => '/search/form' %></div>
          </div>
          <div id="main-menu">
            <ul>
              <li><%= link_to "Home", :controller => "/" %></li>
              <li><%= link_to "Patienten", :controller => 'patients' %></li>
              <li><%= link_to "Recalls", :controller => 'recalls' %></li>
              <li><%= link_to "Rechnungen", :controller => 'invoices' %></li>
              <li><%= link_to "Versicherungen", :controller => 'insurances' %></li>
              <li><%= link_to "&Auml;rzte", :controller => 'doctors' %></li>
              <li><%= link_to "Leistungen", :controller => 'tariff_items' %></li>
              <li><%= link_to "Medikamente", :controller => 'drug_products' %></li>
              <li><%= link_to "Buchhaltung", :controller => 'bookkeeping' %></li>
              <li><%= link_to "Hilfe", :controller => 'help' %></li>
            </ul>
          </div>
        </div>
        <% end %>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
      <div id="content">
          <%= yield %>
      </div>
    </div>
  </body>
</html>
