<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML Basic 1.0//EN" "http://www.w3.org/TR/xhtml-basic/xhtml-basic10.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="Simon Huerlimann &lt;huerlisi@gmail.com&gt;" />
    <meta name="keywords" content="zytologie labor limmatplatz zÃ¼rich arzt zelle" />
    <meta name="description" content="Hozr - Zytolabor Limmatplatz" />
    
    <%= stylesheet_link_tag 'noprobs' %>
    <%= stylesheet_link_tag 'cyto' %>
    <%= stylesheet_link_tag 'result_report' %>
    
    <%= javascript_include_tag :defaults %>

    <title>Hozr - <%= controller.action_name %></title>
    <style>
      img {
        border: 0px
      }
    </style>
  </head>
  <body>
    <div id="MainWrapper">
        <div id="Header" style="background-color: #AEB9CF">
          <%= image_tag 'logo-left-small.png' %>
          <%= image_tag 'logo-right-small.png' %>
        </div>
        <div id="HeaderMenus">
          <ul>
            <li><%= link_to "Home", :controller => "/" %></li>
            <li><%= link_to "Kontakt", "mailto:info@zyto-labor.com" %></li>
            <li><%= link_to "Suche", :controller => "/search" %></li>
            <li><%= link_to "Bestellen", 'http://shop.zyto-labor.com' %></li>
          </ul>
        </div>

        <div id="MainContent">
<table style="height: 100%">
  <tr>
    <td width="100%">
      <div id="result">
        <%= yield %>
      </div>
    </td>
    <td id="personal-information" style="min-width: 200px; vertical-align: top">
      <% unless @related_cases.nil? %>
      <fieldset style="font-size: 80%; line-height: 1.3em">
        <legend>Geschichte</legend>
        <dl>
          <%= render :partial => 'cases/compact', :collection => @related_cases %>
        </dl>
      </fieldset>
      <% end %>
      <fieldset style="font-size: 80%; line-height: 1.3em">
        <legend>Aktionen</legend>
        <%= render :partial => '/search/form' %>
        <ul>
          <li><%= link_to_remote "Auftragsformular", :update => 'result', :url => {:action => :order_form_inline, :id => @case} %></li>
          <li><%= link_to "Resultat als PDF (A4)", :action => :pdf_a4, :id => @case %></li>
        </ul>
      </fieldset>
    </td>
  </tr>
</table>
        </div>
    </div>
</body>
</html>
