<div id="medical_case_form">
  <%= error_messages_for :medical_cases %>
  <%= form_for 'search', patient_treatment_medical_cases_path(@treatment.patient, @treatment), :method => :get, :remote => true do |f| %>
    <%= f.label 'query', 'Suche' %>
    <%= f.text_field :query, :label => "Suche", :size => 15, :autocomplete => 'off' %>

    <%= image_submit_tag 'find.png', :title => 'Suchen' %>
  <% end %>

  <div id="medical_case_search_results"></div>
</div>
