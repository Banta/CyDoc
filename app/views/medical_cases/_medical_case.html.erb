<% editable = @treatment.invoices.empty? %>
<tr id="medical_case_<%= item.id %>">
  <td><%= item.diagnosis.type %></td>
  <td><%= item.to_s %></td>
  <% if editable %>
    <td><%= link_to_remote(image_tag('delete.png'), {:url => patient_treatment_medical_case_path(@treatment.patient, @treatment, item), :method => :delete}) %></td>
  <% end %>
</tr>
