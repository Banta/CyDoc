<h3>Personalien</h3>
<% @vcard = @patient.vcard %>
<div class="box" id="patient-personal">
  <table style="width: 100%">
    <tr>
      <th style="width: 10em">Adresse</th><td><%= in_place_editor_field :vcard, :given_name %> <%= in_place_editor_field :vcard, :family_name %></td>
      <th style="width: 10em">Geburtstag</th><td><%=h @patient.birth_date.strftime('%d.%m.%Y') %></td>
    </tr>
    <tr>
      <th></th><td><%= in_place_editor_field :vcard, :street_address %></td>
      <th>Geschlecht</th><td><%=h @patient.sex %></td>
    </tr>
    <tr>
      <th></th><td><%= in_place_editor_field :vcard, :postal_code %> <%= in_place_editor_field :vcard, :locality %></td>
      <th>Patientennr.</th><td><%= in_place_editor_field :patient, :doctor_patient_nr %></td>
    </tr>
    <tr>
      <th>Bemerkungen</th>
      <td colspan="3"><%= in_place_editor_field :patient, :remarks %></td>
    </tr>
  </table>
</div>

<%= render :partial => 'phone_numbers/list' %>

<h3>Versicherung</h3>
<div class="box">
  <table>
    <tr>
      <th>Krankenversicherung</th>
      <td>
        <% if !@patient.insurance.nil? %>
          <%=h @patient.insurance.to_s %> <%=h "##{@patient.insurance_nr}" unless @patient.insurance_nr.blank? %><br />
        <% end %>
      </td>
    </tr>
  </table>
</div>
