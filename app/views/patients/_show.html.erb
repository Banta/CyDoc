<h3>Adresse</h3>
<div class="box">
  <b><%=h @patient.name %></b><br />
  <%=h @patient.street_address %><br />
  <%=h @patient.postal_code %> <%=h @patient.locality %><br />
  <%=h @patient.birth_date %> <%=h @patient.sex %><br />
</div>

<%= render :partial => 'phone_numbers/list' %>

<h3>Versicherung</h3>
<div class="box">
  <table>
    <tr>
      <th>Krankenversicherung</th>
      <td>
        <% if !@patient.insurance.nil? %>
          <%=h @patient.insurance.to_s %> <%=h "##{@patient.insurance_nr}" unless @patient.insurance_nr.blank? %><br />
        <% end %>
      </td>
    </tr>
  </table>
</div>
