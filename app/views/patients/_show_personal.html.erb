<div id="patient-personal">
  <div class="contextual">
      <%= link_to t('cydoc.actions.update'), edit_patient_path(@patient), :remote => true, :class => "icon icon-edit" %>
      <%= link_to t('cydoc.actions.covercard_update'), covercard_update_path(@patient, @patient.covercard_code), :class => "icon icon-edit" unless @patient.covercard_code.blank? %>
      <%= link_to t('cydoc.actions.delete'), patient_path(@patient), :method => :delete, :remote => true, :confirm => t_confirm_delete(@patient), :class => "icon icon-delete" if @patient.deletable? %>
      <%= link_to t('cydoc.actions.kg_label'), print_full_label_patient_path(@patient), :method => :post, :remote => true, :class => "icon icon-print" %>
      <%= link_to t('cydoc.actions.address_label'), print_label_patient_path(@patient), :method => :post, :remote => true, :class => "icon icon-print" %>
  </div>

  <h3><%= t('cydoc.title.personal_data') %></h3>
  <div class="box">
  <% @vcard = @patient.vcard %>
  <table style="width: 100%">
    <tr>
      <th rowspan="3" style="width: 15%; vertical-align: top"><%= t_attr(:address) %></th>
      <td rowspan="3">
        <%= @vcard.family_name %> <%= @vcard.given_name %><br />
        <%- if @vcard.extended_address.present? %>
          <%= @vcard.extended_address %><br />
        <%- end %>
        <%= @vcard.street_address %><br />
        <%- if @vcard.post_office_box.present? %>
          <%= @vcard.post_office_box %><br />
        <%- end %>
        <%= @vcard.postal_code %> <%= @vcard.locality %>
     </td>
      <th style="width: 15%"><%= t_attr(:birth_date) %></th><td><%= @patient.birth_date.blank? ? 'unbekannt' : l(@patient.birth_date) %></td>
    </tr>
    <tr>
      <th><%= t_attr(:gender) %></th><td><%= @patient.sex %></td>
    </tr>
    <tr>
      <th><%= t_attr(:doctor_patient_nr) %></th><td><%= @patient.doctor_patient_nr %></td>
    </tr>
    <tr>
      <th><%= t_attr(:covercard_code) %></th>
      <td><%= @patient.covercard_code %></td>
    </tr>
    <tr>
      <th><%= t_attr(:remarks) %></th>
      <td colspan="3"><%= @patient.remarks %></td>
    </tr>
  </table>
  </div>
</div>
