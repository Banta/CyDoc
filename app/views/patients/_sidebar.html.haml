#patient-sidebar.sub-tabs
  .contextual{:style => "margin-right: 2em"}
    = link_to t('cydoc.actions.new_case'), new_patient_treatment_path(resource), :method => :get, :class => "icon icon-add", :remote => true
  %h3{:style => "margin-right: 1em"}= t('cydoc.title.cases')
  %ul#sub-tab-sidebar-treatments
    - for treatment in resource.treatments
      %li{:id => "sub-tab-treatments-#{treatment.id}"}
        = link_to "#{treatment.to_s(:short)}", {:url => treatment, :method => :get}, :remote => true
        %ul#sub-tab-sidebar-invoices
          - for invoice in treatment.invoices
            %li{:id => "sub-tab-invoices-#{invoice.id}"}
              = link_to "#{invoice.to_s(:short)}", {:url => invoice, :method => :get}, :class => ['invoice', invoice.state, invoice.reminded? ? "reminded" : ""].join(' '), :remote => true
