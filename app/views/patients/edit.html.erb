<div class="box">
  <table>
    <% form_for @patient, :builder => Rubaidh::TabularForm::TabularFormBuilder do |patient| %>
      <%= render :partial => '/vcards/form', :locals => {:vcard_name => 'patient', :vcard => @patient} %>

      <%= patient.text_field :birth_date, :label => 'Geburtstag', :size => 12 %>
      <%= patient.select "insurance_id", Insurance.find(:all, :include => :vcard, :order => 'vcards.full_name').collect { |i| [i.name, i.id] }, :include_blank => true, :label => "Versicherung" %>
      <%= patient.text_field :insurance_nr, :size => 15, :label => "Versicherungsnr." %>
      <%= patient.text_field :doctor_patient_nr, :size => 15, :label => "Patientennr." %>
      <%= patient.text_area :remarks, :label => "Bemerkungen", :cols => 30, :rows => 3 %>

      <%= patient.submit 'Speichern' %>
    <% end %>
  </table>
</div>
