<% form_for setup_patient(@patient), :builder => Rubaidh::TabularForm::TabularFormBuilder do |patient| %>
<div class="contextual">
  <%= link_to_function "Speichern", "this.form.submit", :class => "icon icon-save" %>
  <%= link_to "Abbrechen", patients_path, :class => "icon icon-cancel" %>
</div>

<h2>Patient erfassen</h2>
<div class="box">
  <%= render :partial => 'form', :locals => {:patient => patient} %>
  <%= patient.submit 'Speichern' %>
</div>
<% end %>
