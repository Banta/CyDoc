<%= link_to_remote image_tag('edit.png'), {:url => edit_recall_path(recall), :method => :get}, :title => "Recall editieren" %>
<% for state in recall.aasm_events_for_current_state -%>
<%= 
case state
  when :obey:   link_to_remote image_tag('true.png'), {:url => obey_recall_path(recall)}, :title => "Termin akzeptiert"
  when :cancel: link_to_remote image_tag('delete.png'), {:url => recall_path(recall), :method => :delete}, :title => "Will keinen Termin"
  when :prepare: link_to_remote image_tag('send.png'), {:url => prepare_recall_path(recall)}, :title => "Aufgebot senden"
end %>
<% end -%>
<%= link_to image_tag('pdf.png'), recall_path(recall, :format => :pdf) %>
