<fieldset>
<legend><%= @patients.size %> Patienten f&uuml;r Suche nach '<%=h params[:query] %>'</legend>
  <table class="list" style="margin-top: 0px">
    <%= render :partial => '/patients/list_header' %>
    <%= render :partial => '/patients/list', :collection => @patients %>
  </table>
  <p><%= "mehr als 100 Resultate..." if @patients.size == 100 %></p>
</fieldset>

