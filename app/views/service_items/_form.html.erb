<script type="text/javascript">
  $('search_query').focus()
</script>

<div id="service_item_form" class="box">
  <%= error_messages_for :service_items %>
  <% remote_form_for 'search', :before => "Element.show('spinner')", :success => "Element.hide('spinner')", :url => select_tariff_item_service_items_path(@tariff_item), :method => :get do |f| %>
    <%= f.label 'query', 'Suche' %>
    <%= f.text_field :query, :label => "Suche", :size => 15, :autocomplete => 'off' %>

    <%= image_submit_tag 'find.png', :title => 'Suchen' %>
    <%= image_tag("indicator.gif",
                  :align => "absmiddle",
                  :border => 0,
                  :id => "spinner",
                  :style =>"display: none;" ) %>
  <% end %>

  <div id="tariff_item_search_results"></div>
</div>
