<tr title="<%= select_item.remark %>" style="cursor: pointer" onclick="<%= remote_function(:method => 'post', :url => tariff_item_service_items_path(@tariff_item, :select_item_id => select_item.id)) %>">
  <td style="text-align:right"><%= select_item.code %></td>
  <td><span style="font-weight: bold"><%= truncate(select_item.remark, :length => 100, :separator => ' ') %></span></td>
  <td style="text-align:right"><b><%= sprintf('%.2f', select_item.amount) %></b>&nbsp;CHF</td>
</tr>
