<div id="session_<%= item.id %>">
  <div class="contextual">
  <% if item == item.treatment.sessions.first %>
    <%= link_to_remote "Leistung erfassen", {:update => "new_session_#{item.id}_service_record", :url => new_patient_session_service_record_url(@patient, item), :method => :get}, :class => "icon icon-add" %>
  <% end %>
  </div>

  <h4><%=h item.to_s(:short) %></h4>

  <div id="new_session_<%= item.id %>_service_record">
  <% @session = item %>
  <% if item == item.treatment.sessions.first %>
    <%= render :partial => 'service_records/form' %>
  <% end %>
  </div>

  <ul class="session">
    <% for service_record in item.service_records %>
      <li>
        <b><%=h sprintf('%g', service_record.quantity) %>x <%=h service_record.code %></b>: <%=h service_record.text %>
        <% if item == item.treatment.sessions.first %>
        <span><%= link_to_remote image_tag('delete.png'), {:url => patient_session_service_record_path(@patient, item, service_record), :method => :delete} %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
