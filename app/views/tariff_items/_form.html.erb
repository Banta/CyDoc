<div id="tariff_item_form">
  <% semantic_remote_form_for @tariff_item do |form| %>
    <% form.inputs do %>
      <%= form.input :code, :input_html => {:size => 8} %>
      <%= form.input :remark, :input_html => {:rows => 3} %>
      <%= form.input :obligation %>
    <% end %>

    <% form.buttons do %>
      <%= form.commit_button :class => "icon icon-save" %>
    <% end %>
  <% end %>
</div>
 