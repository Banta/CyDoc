<tr title="<%=h item.remark %>" style="cursor: pointer" onclick="<%= remote_function :url => tariff_item_url(item), :method => :get %>">
  <td style="text-align:right"><%=h item.code %></td>
  <td><span style="font-weight: bold"><%=h truncate(item.remark, :length => 80, :separator => ' ') %></span></td>
  <td style="text-align:right"><%=h currency_fmt(item.amount_mt) %>&nbsp;TP</td>
  <td style="text-align:right"><%=h currency_fmt(item.amount_tt) %>&nbsp;TP</td>
  <td style="text-align:right"><b><%=h currency_fmt(item.amount) %></b>&nbsp;CHF</td>
</tr>
