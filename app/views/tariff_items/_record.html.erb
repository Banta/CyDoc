<% begin %>
  <%= render :partial => "/service_records/tariff_item_#{record.tariff_type}", :locals => {:record => record} %>
<% rescue ActionView::ActionViewError %>
  <%= render :partial => '/service_records/tariff_item', :locals => {:record => record} %>
<% end %>

<% 
  @subtotal       += record.amount
  @line_counter   += 1
%>

<% if @line_counter == 24 %>
  <%= render :partial => 'insurance_recipe_page_break' %>
<% end %>
