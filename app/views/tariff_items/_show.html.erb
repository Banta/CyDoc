<div class="box">
  <div class="contextual">
    <%= link_to "Editieren", {:url => edit_tariff_item_path(@tariff_item), :method => :get}, :class => "icon icon-edit", :remote => true %>
    <%= link_to "Duplizieren", {:url => duplicate_tariff_item_path(@tariff_item), :method => :post}, :class => "icon icon-add", :remote => true %>
    <%= link_to "LÃ¶schen", {:url => tariff_item_path(@tariff_item), :method => :delete, :confirm => t_confirm_delete(@tariff_item)}, :class => "icon icon-delete", :remote => true %>
    <%= link_to "Katalog anzeigen", tariff_items_path(:all => true), :class => "icon icon-index" %>
  </div>
  <h3>Leistung</h3>
  <table>
    <tr>
      <th><%= t_attr(:type_as_string) %>:</th>
      <td><%= @tariff_item.type_to_s %></td>
    </tr>
    <tr>
      <th><%= t_attr(:code) %>:</th>
      <td><%= in_place_editor_field :tariff_item, :code %></td>
    </tr>
    <tr>
      <th><%= t_attr(:remark) %>:</th>
      <td><%= in_place_editor_field :tariff_item, :remark %></td>
    </tr>
    <tr>
      <th><%= t_attr(:obligation) %>:</th>
      <td><%= @tariff_item.obligation? ? "Ja" : "Nein" %></td>
    </tr>
    <tr>
      <th><%= t_attr(:vat_class) %>:</th>
      <td><%= @tariff_item.vat_class.to_s %></td>
    </tr>
  </table>

  <% if @tariff_item.is_a? TariffItemGroup %>
    <%= render 'show_tariff_item_group' %>
  <% else %>
    <%= render 'show_price' %>
  <% end %>
</div>
