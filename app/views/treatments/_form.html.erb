<%= error_messages_for :treatment %>

<div class="box">
  <% semantic_form_for [:patient, @treatment] do |treatment| %>
    <% treatment.inputs do %>
      <%= treatment.input :date_begin_formatted, :label => 'Behandlung von', :input_html => {:size => 12} %>
      <%= treatment.input :date_end_formatted, :label => 'Behandlung bis', :input_html => {:size => 12} %>
      <li>
        <label for="law[name]">Gesetz</label>
        <%= select 'law', :name, [['KVG', LawKvg], ['UVG', LawUvg], ['IVG', LawIvg], ['MVG', LawMvg], ['VVG', LawVvg], ['ORG', LawOrg]] %>
      </li>
      <%= treatment.input :reason, :collection => ['Krankheit', 'Mutterschaft', 'PrÃ¤vention', 'Unfall', 'Geburtsfehler'], :label => 'Behandlungsgrund' %>
      <%= treatment.input :place_type, :collection => ['Praxis', 'Spital'], :label => 'Erbringungsort' %>
      <%= treatment.submit "Speichern" %>
    <% end %>
  <% end %>
</div>
