- cache [I18n.locale, @treatment.cache_key] do
  .contextual
    = icon_link_to :edit, edit_treatment_path(@treatment), :remote => true
    - if @treatment.chargeable?
      = link_to t('cydoc.actions.new_invoice'), new_patient_treatment_invoice_path(@treatment.patient, @treatment), :remote => true
    - if @treatment.active?
      = icon_link_to :delete, treatment_path(@treatment), :method => :delete, :remote => true, 'data-confirm' => t_confirm_delete(@treatment)

  = render 'treatments/show_main'

  #new_treatment_invoice

  %h3= t('cydoc.title.medical_cases')
  %table.table
    = render @treatment.medical_cases

  #treatment_sessions
    .contextual
      = icon_link_to :new_treatment_session, new_patient_treatment_session_path(@treatment.patient, @treatment), 'remote' => true
    %h3= t('cydoc.title.treatment_sessions')
    #treatment_session_list.box
      = render :partial => 'sessions/list', :object => @treatment.sessions
    %h4#treatment_service_list_total
      = t_attr(:amount, Treatment)
      = currency_fmt(@treatment.amount)
