<% if user_signed_in? -%>
  <div id="user-bar-greeting"><%= t('cydoc.user_bar.logged_in_as') %> <%= link_to current_user.email, user_path(current_user) %></div>
  <div id="user-bar-action"  >(<%= link_to t('cydoc.user_bar.logout'), destroy_user_session_path, :method => :delete %>)</div>
<% else -%>
  <div id="user-bar-action"  ><%= link_to t('cydoc.user_bar.login'), new_user_session_path %></div>
<% end -%>
